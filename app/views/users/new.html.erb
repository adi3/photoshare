<% content_for :title, "Registration" %>

<div class="register">
	<% flash.each do |name, msgs| %>
		<% msgs.each do |m| %>
	    	<%= content_tag :div, m, class: name %>
	    <% end %>
	    <br />
	<% end %>

	<%= form_for :user, :url => {action: :create} do |f| %>

		<table cellspacing="0">
			<tr>
				<td><%= f.label :first_name, "First Name" %></td>
				<td><%= f.text_field :first_name %></td>
			</tr>

			<tr>
			   	<td><%= f.label :last_name, "Last Name" %></td>
			   	<td><%= f.text_field :last_name %></td>
			</tr>

			<tr>
			   	<td><%= f.label :login, "Login" %></td>
			   	<td><%= f.text_field :login %></td>
			</tr>

			<tr>
			   	<td><%= f.label :password, "Password" %></td>
			   	<td><%= f.password_field :password %></td>
			</tr>

			<tr>
			   	<td><%= f.label :password_confirmation, "Confirm Password" %></td>
			   	<td><%= f.password_field :password_confirmation %></td>
			</tr>
		</table>

		<div>
	   		<%= f.submit "Register >>", class: "btn green-btn" %>
	   	</div>
	<% end %>
</div>